<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_sex_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:textAlignment="center" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_man_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Man" />

        <RadioButton
            android:id="@+id/radio_woman_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Woman" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_weight_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/weight_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Weight"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_height_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/height_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Height"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_age_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/age_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Age"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_status_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textAlignment="center" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_satus_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lack of physical activity" />

        <RadioButton
            android:id="@+id/radio_status_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Low physical activity (exercises 1-3 a week)" />

        <RadioButton
            android:id="@+id/radio_status_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average physical activity (exercises 3-5 weekly)" />

        <RadioButton
            android:id="@+id/radio_status_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High physical activity (exercises every day)" />

        <RadioButton
            android:id="@+id/radio_status_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very high physical activity" />

        <Button
            android:id="@+id/button_calc_demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate demand" />
    </RadioGroup>

</LinearLayout>